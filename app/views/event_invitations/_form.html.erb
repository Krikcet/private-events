<%= form_with(model: event_invitation) do |form| %>
  <div>
    <%= simple_form_for(@event_invitation) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="form-inputs">
        <%= f.input :invited_user_id, collection: User.all, label_method: :username, value: :id %>
        <%= f.input :invited_event_id, collection: Event.all, label_method: :title, value: :id %>

      </div>
    
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
<% end %>